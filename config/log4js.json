{
  "replaceConsole": true,
  "allInOne": true,
  "levels":{
    "[all]":"trace"
  },
  "appenders": [
    {
      "type": "console", 
      "category": "console",
      "layout": {
        "type": "pattern",
        "pattern": "[%r][%[%5.5p%]]-%m"
      }
    },
    {
      "type" : "dateFile",
      "category": "logTrace",
      "layout": {
        "type": "pattern",
        "pattern": "[%r]-%m"
      },
      "pattern": "yyyy-MM-dd/hh_trace.log",
      "filename" : "./logs/",
      "absolute" : true,
      "alwaysIncludePattern": true,
      "maxLogSize":1
    },
    {
      "type" : "dateFile",
      "category": "logDebug",
      "layout": {
        "type": "pattern",
        "pattern": "[%r]-%m"
      },
